<mujoco model="diff_robot">
    <compiler angle="degree"/>
    <option gravity="0 0 -9.81" timestep="0.002"/>

    <worldbody>
        <light pos="0 0 3" dir="0 0 -1"/>
        <geom name="floor" type="plane" size="5 5 0.1" rgba=".9 .9 .9 1"/>
        <body name="walls" pos="0 0 0">
            <geom name="wall_front" type="box" size="2.5 0.05 0.3" pos="0 2.5 0.3" rgba="0.5 0.5 0.5 1"/>
            <geom name="wall_back" type="box" size="2.5 0.05 0.3" pos="0 -2.5 0.3" rgba="0.5 0.5 0.5 1"/>
            <geom name="wall_left" type="box" size="0.05 2.5 0.3" pos="-2.5 0 0.3" rgba="0.5 0.5 0.5 1"/>
            <geom name="wall_right" type="box" size="0.05 2.5 0.3" pos="2.5 0 0.3" rgba="0.5 0.5 0.5 1"/>

            <geom name="obstacle_1" type="box" size="0.4 0.3 0.2" pos="1 -1 0.2" rgba="0.2 0.5 0.8 1"/>
            <geom name="obstacle_2" type="cylinder" size="0.4 0.4 0.2" pos="-1 1.5 0.2" rgba="0.8 0.2 0.2 1"/>
            <geom name="obstacle_3" type="cylinder" size="0.3 0.7 0.2" pos="1 1.5 0.2" rgba="0.2 0.2 0.8 1"/>
        </body>
        <geom name="start_point" type="cylinder" size="0.3 0.001" pos="0 0 0.001" rgba="0 1 0 0.3" contype="0" conaffinity="0"/>
        <body name="goal" pos="2 2 0.001">
            <geom name="goal_point" type="cylinder" size="0.3 0.001" rgba="1 1 0 0.4" contype="0" conaffinity="0"/>
            <site name="goal_site" pos="0 0 0.1" size="0.05" rgba="1 1 0 1"/>
        </body>

        <body name="base_link" pos="0 0 0.1">
            <joint type="free"/>
            <geom name="chassis" type="box" size="0.2 0.2 0.05" rgba="0.8 0.8 0.8 1"/>
            <geom name="front_mark" type="box" size="0.02 0.1 0.01" pos="0.18 0 0.05" rgba="1 0 0 1"/>

            <body name="left_wheel" pos="0 0.22 0">
                <joint name="left_joint" axis="0 1 0" damping="0.1" armature="0.01"/>
                <geom type="cylinder" size="0.06 0.02" rgba="0.1 0.1 0.1 1" euler="90 0 0"/>
            </body>

            <body name="right_wheel" pos="0 -0.22 0">
                <joint name="right_joint" axis="0 1 0" damping="0.1" armature="0.01"/>
                <geom type="cylinder" size="0.06 0.02" rgba="0.1 0.1 0.1 1" euler="90 0 0"/>
            </body>

            <body pos="0.15 0 -0.04"><joint type="ball"/><geom type="sphere" size="0.02" friction="0.01"/></body>
            <body pos="-0.15 0 -0.04"><joint type="ball"/><geom type="sphere" size="0.02" friction="0.01"/></body>

            <body name="lidar" pos="0 0 0.1">
                <site name="s0"  zaxis="1 0 0"/>
                <site name="s1"  zaxis="0.98 0.17 0"/> <site name="s2"  zaxis="0.94 0.34 0"/> <site name="s3"  zaxis="0.87 0.5 0"/>  <site name="s4"  zaxis="0.77 0.64 0"/> <site name="s5"  zaxis="0.64 0.77 0"/> <site name="s6"  zaxis="0.5 0.87 0"/>  <site name="s7"  zaxis="0.34 0.94 0"/> <site name="s8"  zaxis="0.17 0.98 0"/> <site name="s9"  zaxis="0 1 0"/>       <site name="s10" zaxis="-0.17 0.98 0"/> <site name="s11" zaxis="-0.34 0.94 0"/>
                <site name="s12" zaxis="-0.5 0.87 0"/>
                <site name="s13" zaxis="-0.64 0.77 0"/>
                <site name="s14" zaxis="-0.77 0.64 0"/>
                <site name="s15" zaxis="-0.87 0.5 0"/>
                <site name="s16" zaxis="-0.94 0.34 0"/>
                <site name="s17" zaxis="-0.98 0.17 0"/>
                <site name="s18" zaxis="-1 0 0"/>
                <site name="s19" zaxis="-0.98 -0.17 0"/>
                <site name="s20" zaxis="-0.94 -0.34 0"/>
                <site name="s21" zaxis="-0.87 -0.5 0"/>
                <site name="s22" zaxis="-0.77 -0.64 0"/>
                <site name="s23" zaxis="-0.64 -0.77 0"/>
                <site name="s24" zaxis="-0.5 -0.87 0"/>
                <site name="s25" zaxis="-0.34 -0.94 0"/>
                <site name="s26" zaxis="-0.17 -0.98 0"/>
                <site name="s27" zaxis="0 -1 0"/>
                <site name="s28" zaxis="0.17 -0.98 0"/>
                <site name="s29" zaxis="0.34 -0.94 0"/>
                <site name="s30" zaxis="0.5 -0.87 0"/>
                <site name="s31" zaxis="0.64 -0.77 0"/>
                <site name="s32" zaxis="0.77 -0.64 0"/>
                <site name="s33" zaxis="0.87 -0.5 0"/>
                <site name="s34" zaxis="0.94 -0.34 0"/>
                <site name="s35" zaxis="0.98 -0.17 0"/>
            </body>
        </body>

    </worldbody>

    <actuator>
        <velocity name="left_motor" joint="left_joint" kv="10" ctrlrange="-20 20"/>
        <velocity name="right_motor" joint="right_joint" kv="10" ctrlrange="-20 20"/>
    </actuator>

    <sensor>
        <rangefinder name="rf0" site="s0" cutoff="5"/>
        <rangefinder name="rf1" site="s1" cutoff="5"/>
        <rangefinder name="rf2" site="s2" cutoff="5"/>
        <rangefinder name="rf3" site="s3" cutoff="5"/>
        <rangefinder name="rf4" site="s4" cutoff="5"/>
        <rangefinder name="rf5" site="s5" cutoff="5"/>
        <rangefinder name="rf6" site="s6" cutoff="5"/>
