        <rangefinder name="rf31" site="s31" cutoff="5"/>
        <rangefinder name="rf32" site="s32" cutoff="5"/>
        <rangefinder name="rf33" site="s33" cutoff="5"/>
        <rangefinder name="rf34" site="s34" cutoff="5"/>
        <rangefinder name="rf35" site="s35" cutoff="5"/>
    </sensor>

</mujoco>